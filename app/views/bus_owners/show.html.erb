<%=render "shared/container1"%>

<div class="col-md-4 gradient-custom text-center" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem; background-color: #F8F8FF; border-right-style:inset">
    <%=image_tag "default_profile_icon.png" ,class:"img-fluid my-5" ,style:"width:80px" %>
    <h5> <%= @bus_owner.name %></h5>
    <p><%= @bus_owner.user_type %></p>
    <%if bus_owner_signed_in?%>
        <h6><%= link_to "My Bookings",bookings_path(@bus_owner.id), class:"btn btn-outline-success mt-2" %></h6> 
    <%end%>
    <%= link_to "Back", :back,class:"btn btn-outline-danger mt-2 mb-2 py-1 px-3" %>
</div>

<div class="col-md-8">
    <div class="card-body p-4">
      <h6> Account Information</h6>
      <hr class="mt-0 mb-2">
      <div class="row pt-0">
        <div class="col-8 mb-0">
          <h6>Email:</h6>
          <p class="text-muted"><%= @bus_owner.email %></p>
        </div>
      </div>

      <div class="row pt-0">
        <div class="col-8 mb-0">
          <h6>Created on:</h6>
          <p class="text-muted"><%= @bus_owner.created_at.localtime.strftime("%d/%m/%Y , %r")%> <%=@bus_owner.created_at.localtime.strftime(" %Z") %> </p>
        </div>
      </div>

      <div class="row pt-0">
        <div class="col-10 mb-0">
          <h6>Registration no:</h6>
          <p class="text-muted"><%= @bus_owner.registration_no %></p>
        </div>
      </div>

      <%if bus_owner_signed_in?%>
        <div class="row pt-1">
          <div class="col-6 mb-3">
            <h6><%= link_to "Update Account" ,edit_bus_owner_registration_path ,class:"btn btn-outline-success mt-2"%> </h6> 
          </div>
        </div>
      <%end%>
     
      <div class="row pt-1">
        <%if bus_owner_signed_in? %>
            <div class="col-6 mb-3">
                <h6><%= link_to "Add new Bus",new_bus_owner_bus_path(@bus_owner),class:"btn btn-outline-success mt-2"%></h6>
            </div> 
        <%end%>
        <div class="col-6 mb-3">
            <h6><%=link_to "Listed Bus",bus_owner_buses_path(@bus_owner),class:"btn btn-outline-success mt-2"%></h6>
        </div> 
      </div> 
    </div> 
</div>
<%=render "shared/container2"%>


