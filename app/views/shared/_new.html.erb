
<%= render "shared/errors", object: resource %>
<section>
	<div class = "container py-4">
		<div class = "row d-flex justify-content-center align-items-center">
			<div class = "col col-xl-8">
				<div class = "card shadow" style = "border-radius: 1rem;">
					<div class = "row g-0">
						<div class = "col-md-6 col-lg-5 d-none d-md-block">
							<%= image_tag "usersignup.jpg", class: "img-fluid", style: "border-radius:10px" %>
						</div>
						<div class = "col-md-6 col-mg-7 d-flex align-items-center">
							<div class = "card-body p-2 p-mg-5 text-black">
								<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
									<div class = "d-flex align-items-center mb-2 pb-0">
										<span class = "h1 fw-bold mb-0">
											<%= image_tag "bus_logo2.png", class: "form_img" %> 
										</span>
										<span class = "h2 fw-bold mb-0"> Signup</span>
									</div>
                  <% if @type == "bus_owner" %>
									  <h5 class = "fw-normal mb-1 pb-0" style = "letter-spacing: 1px;">Create a bus owner account</h5>
                  <% else %>
                    <h5 class = "fw-normal mb-1 pb-0" style = "letter-spacing: 1px;">Create an account</h5>
                  <% end %>
									<div class = "form-outline mb-2">
										<%= f.text_field :name, placeholder: "Enter name", required: "", autofocus: true, class: "form-control form-control-mg" %>
									</div>
									<div class = "form-outline mb-3">
										<%= f.email_field :email, placeholder: "Enter email", required: "", autofocus:true, class: "form-control form-control-mg" %>
									</div>
									<div class = "form-outline mb-1">
										<%= f.password_field :password, placeholder: "Password", class: "form-control form-control-mg", autocomplete: "new-password" %>   
										<% if @minimum_password_length %>
											<em>(<%= @minimum_password_length %> characters minimum)</em>
										<% end %><br />
									</div>
									<div class = "form-outline mb-2">
										<%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control form-control-mg", autocomplete: "new-password" %>        
									</div>
									<% if @type == "bus_owner" %>
                    <div class = "form-outline mb-1">
                      <%= f.text_field :registration_no, placeholder: "Registration no", required: "", class: "form-control form-control-mg" %>        
                    </div>
									<% end %>
									<div class = "pt-1 mb-1">
										<%= f.submit "Sign Up", class: "btn btn-dark btn-mg btn-block" %>
									</div>
                  <% if @type == "bus_owner" %>
									  <%= render "bus_owners/shared/links" %>  
                  <% else %> 
                    <%= render "users/shared/links" %>
								  <% end %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
